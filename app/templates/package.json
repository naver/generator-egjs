{
	"name": "@egjs/<%= componentName.toLowerCase() %>",
	"version": "<%= options.version %>",
	"main": "dist/<%= componentName.toLowerCase() %>.js",
	"scripts": {
    "start": "webpack-dev-server --open",
    "build": "webpack --env=development",
    "build:prod": "webpack --env=production && webpack --env=production-packaged",
    "lint": "eslint src",
    "jsdoc": "rm -rf ./doc && jsdoc -c jsdoc.json",
    "prepush": "npm run lint",
    "commitmsg": "node config/validate-commit-msg.js",
    "test": "karma start",
    "prebuild:demo": "cpx 'doc/**/*' demo/doc/ --clean && cpx 'dist/**/*' demo/dist --clean",
    "build:demo": "jekyll build -s demo",
    "open:demo": "npm run prebuild:demo && jekyll serve -s demo",
    "deploy:demo": "gh-pages -d demo/_site"
	},
	"author": "<%= options.author %>",
	"license": "<%= options.license %>",<% if(options.extendsComponent){ %>
	"dependencies": {
		"egjs-component": "github:naver/egjs-component"
	},<% } %>
	"devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.0",
    "chai": "^3.5.0",
    "cpx": "^1.5.0",
    "egjs-jsdoc-template": "^1.3.1",
    "eslint": "^3.18.0",
    "eslint-config-naver": "^1.0.0",
    "eslint-loader": "^1.7.0",
    "gh-pages": "^0.12.0",
    "husky": "^0.13.3",
    "inject-loader": "^3.0.0",
    "iscroll": "^5.2.0",
    "jquery": "^1.7.0",
    "jsdoc": "^3.4.3",
    "karma": "^1.5.0",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.2.0",
    "phantomjs-polyfill": "0.0.2",
    "phantomjs-polyfill-object-assign": "0.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "uglify-js": "^2.8.16",
    "uglifyjs-webpack-plugin": "^0.3.1",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0",
    "write-file-webpack-plugin": "^4.0.0"
	}
}
